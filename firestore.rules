rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is a member of a space
    function isSpaceMember(spaceId) {
      return request.auth != null &&
        spaceId in get(/databases/$(database)/documents/users/$(request.auth.uid)).data.spaceIds;
    }

    // Helper function to check if user is space leader
    function isSpaceLeader(spaceId) {
      let space = get(/databases/$(database)/documents/spaces/$(spaceId)).data;
      return request.auth != null &&
        exists(/databases/$(database)/documents/spaces/$(spaceId)) &&
        space.creatorId == request.auth.uid;
    }

    // Default deny all
    match /{document=**} {
      allow read, write: if false;
    }

    // Users collection
    match /users/{userId} {
      // Anyone can read user profiles for username validation and invitations
      // This is safe because user profiles don't contain sensitive data
      allow read: if true;

      // Users can create their own profile during signup
      allow create: if request.auth != null && request.auth.uid == userId;

      // Users can only update their own profile
      allow update: if request.auth != null && request.auth.uid == userId;

      // Prevent deletion
      allow delete: if false;
    }

    // Spaces collection
    match /spaces/{spaceId} {
      // Members can read their spaces, OR users accepting invitations can read
      allow read: if isSpaceMember(spaceId) ||
        (request.auth != null && resource.data.keys().hasAll(['members']));

      // Authenticated users can create spaces
      allow create: if request.auth != null
        && request.resource.data.creatorId == request.auth.uid;

      // Leaders can update spaces, OR users can add themselves when accepting invitations
      allow update: if isSpaceLeader(spaceId) ||
        (request.auth != null &&
         // Only members array is being modified
         request.resource.data.keys().toSet().difference(resource.data.keys().toSet()).size() == 0 &&
         // Members array size increases by exactly 1
         request.resource.data.members.size() == resource.data.members.size() + 1 &&
         // The new member being added is the current user
         request.resource.data.members[request.resource.data.members.size() - 1].uid == request.auth.uid);

      // Only leaders can delete spaces
      allow delete: if isSpaceLeader(spaceId);
    }

    // Invitations collection
    match /invitations/{invitationId} {
      // Users can read invitations sent to them, by them, or in spaces they're members of
      allow read: if request.auth != null && (
        resource.data.invitedBy == request.auth.uid ||
        resource.data.invitedUsername == get(/databases/$(database)/documents/users/$(request.auth.uid)).data.username ||
        isSpaceMember(resource.data.spaceId)
      );

      // Space members can create invitations
      allow create: if request.auth != null
        && request.resource.data.invitedBy == request.auth.uid
        && isSpaceMember(request.resource.data.spaceId);

      // Recipients can update status (accept/decline)
      allow update: if request.auth != null
        && resource.data.invitedUsername == get(/databases/$(database)/documents/users/$(request.auth.uid)).data.username
        && request.resource.data.status in ['accepted', 'declined'];

      // Sender can delete (cancel) invitations, OR space leaders can delete any invitation
      allow delete: if request.auth != null &&
        (resource.data.invitedBy == request.auth.uid || isSpaceLeader(resource.data.spaceId));
    }

    // Posts collection
    match /posts/{postId} {
      // Space members can read posts in their spaces
      allow read: if request.auth != null
        && isSpaceMember(resource.data.spaceId);

      // Space members can create posts in their spaces
      allow create: if request.auth != null
        && request.resource.data.userId == request.auth.uid
        && isSpaceMember(request.resource.data.spaceId)
        && request.resource.data.caption.size() <= 500;

      // Users can update/delete their own posts, OR space leaders can delete any post
      allow update: if request.auth != null && resource.data.userId == request.auth.uid;
      allow delete: if request.auth != null &&
        (resource.data.userId == request.auth.uid || isSpaceLeader(resource.data.spaceId));
    }

    // Comments collection
    match /comments/{commentId} {
      // Space members can read comments in their spaces
      allow read: if request.auth != null
        && isSpaceMember(resource.data.spaceId);

      // Space members can create comments in their spaces
      allow create: if request.auth != null
        && request.resource.data.userId == request.auth.uid
        && isSpaceMember(request.resource.data.spaceId)
        && request.resource.data.text.size() <= 500;

      // Users can delete their own comments, OR space leaders can delete any comment
      allow delete: if request.auth != null &&
        (resource.data.userId == request.auth.uid || isSpaceLeader(resource.data.spaceId));
    }
  }
}
